<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_marginTop="16dp">

    <!-- Button for Android 1.0 -->
    <Button
        android:id="@+id/button_android_1_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android 1.0" />

    <!-- Button for Android 2.0 -->
    <Button
        android:id="@+id/button_android_2_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android 2.0" />

    <!-- Button for Android 4.0 -->
    <Button
        android:id="@+id/button_android_4_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android 4.0" />

    <!-- Button for Android 5.0 -->
    <Button
        android:id="@+id/button_android_5_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android 5.0" />

    <!-- Button for Android 10 -->
    <Button
        android:id="@+id/button_android_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android 10" />

</LinearLayout>
