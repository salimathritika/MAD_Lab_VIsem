<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- ToggleButton to switch between Wi-Fi and Mobile Data -->
    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Wi-Fi"
        android:textOn="Mobile Data"
        android:checked="true"/>

    <!-- ImageView to show the corresponding image for selected mode -->
    <ImageView
        android:id="@+id/imageViewMode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/img" />

    <!-- Button to change the mode -->
    <Button
        android:id="@+id/changeModeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Mode"
        android:layout_marginTop="20dp"/>

</LinearLayout>
